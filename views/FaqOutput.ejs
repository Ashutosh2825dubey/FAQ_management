<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAQs</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            width: 60%;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            text-align: center;
        }
        ol {
            padding-left: 20px;
        }
        .faq-item {
            margin-bottom: 15px;
        }
        .question {
            font-weight: bold;
        }
        .answer {
            margin-left: 10px;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2><%= heading %></h2>
        <ol>
            <% faqs.forEach((faq, index) => { %>
                <li class="faq-item">
                    <p class="question"><%= faq.question %></p>
                    <p class="answer"><%= faq.answer %></p>
                </li>
            <% }) %>
        </ol>
    </div>
</body>
</html>
